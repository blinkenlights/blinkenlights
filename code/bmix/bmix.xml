<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE bmix PUBLIC "-//BMix//DTD BMix 1.0//EN" "bmix.dtd">
<bmix version="1.0" vmatrix-width="96" vmatrix-height="32" max-frame-interval="50">

  <input id="Graffiti"    listen-port="2330" alpha-mode="brightness" />
  <input id="Foreground"  listen-port="2324" />
  <input id="Top-East"    listen-port="2325" shadow-colour="#aa000000" />
  <input id="Bottom-East" listen-port="2326" />
  <input id="Top-West"    listen-port="2327" />
  <input id="Bottom-West" listen-port="2328" />
  <input id="Background"  listen-port="2323" />

<!-- Example input that gets frames from a blinkenproxy -->  
<!-- <input id="Background"  listen-port="2323" heartbeat-dest-addr="brainy.kicks-ass.net" heartbeat-dest-port="4243"/> -->

  <layer input="Graffiti"    x="0"  y="0"  width="96" height="32" />
  <layer input="Foreground"  x="0"  y="0"  width="96" height="32" />
  <layer input="Top-East"    x="50" y="5"  width="30" height="12" />
  <layer input="Bottom-East" x="50" y="19" width="30" height="9" />
  <layer input="Top-West"    x="16" y="11" width="22" height="8" />
  <layer input="Bottom-West" x="16" y="21" width="22" height="7" />
  <layer input="Background"  x="0"  y="0"  width="96" height="32" />

  <output dest-addr="127.0.0.1" dest-port="5999" min-frame-interval="41" packet-format="MCU_FRAME">
    <screen x="16" y="11" width="22" height="17" bpp="4"/>
  </output>
 
  <dynamic-output min-frame-interval="0" packet-format="MCU_MULTIFRAME">
    <screen x="16" y="11" width="22" height="17" bpp="4"/>
    <screen x="50" y="5"  width="30" height="23" bpp="4"/>
  </dynamic-output>
  
